    <style>
        .modal-dialog-centered-scrollable {
    display: flex;
    align-items: center;
    min-height: calc(100% - (.5rem * 2));
}

.modal-dialog-centered-scrollable .modal-content {
    max-height: 80vh;
    overflow-y: auto;
}
.location-link {
    display: none;
}

.location-link:hover {
    text-decoration: underline; /* Optional: Add underline back on hover if desired */
}


.card-img-top {
    height: 250px;
    object-fit: cover;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* Add box shadow to the card */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Default shadow */
}

.card:hover {
    cursor: pointer;
    /* Add a larger shadow on hover */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    /* Slightly increase the card size on hover */
    transform: scale(1.05);
}

.search-bar {
    margin: 20px 0;
}

.search-bar .form-control {
    border-radius: 0;
}

.search-bar .btn {
