        /* Scroll Bar Styling */

        ::-webkit-scrollbar{
            width: 0.8em;
        }

        ::-webkit-scrollbar-track{
            background: transparent;
            border-radius: 100vw;
            margin-block:.5em ;
            scroll-behavior:smooth;
        }
        ::-webkit-scrollbar-thumb{
            background-color:#198754 ;
            border-radius: 10vw;
        } 
        @supports (scrollbar-color:#198754){
            *{
